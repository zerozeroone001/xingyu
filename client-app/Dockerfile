# 前端构建镜像 - H5版本
FROM node:18-alpine as builder

WORKDIR /app

# 复制package文件
COPY package*.json ./

# 安装依赖
RUN npm install

# 复制源代码
COPY . .

# 构建H5版本
RUN npm run build:h5

# 生产环境镜像
FROM nginx:alpine

# 复制构建产物到nginx
COPY --from=builder /app/dist/build/h5 /usr/share/nginx/html

# 复制nginx配置
COPY nginx.conf /etc/nginx/conf.d/default.conf

# 暴露端口
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
