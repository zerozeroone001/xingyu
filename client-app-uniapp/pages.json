{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },

  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "星语诗词",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/poetry-list/index",
      "style": {
        "navigationBarTitleText": "诗词列表",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/poetry-detail/index",
      "style": {
        "navigationBarTitleText": "诗词详情"
      }
    },
    {
      "path": "pages/square/index",
      "style": {
        "navigationBarTitleText": "广场",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/game/index",
      "style": {
        "navigationBarTitleText": "飞花令"
      }
    },
    {
      "path": "pages/profile/index",
      "style": {
        "navigationBarTitleText": "个人中心"
      }
    },
    {
      "path": "pages/author-list/index",
      "style": {
        "navigationBarTitleText": "诗人列表",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/author-detail/index",
      "style": {
        "navigationBarTitleText": "诗人详情"
      }
    },
    {
      "path": "pages/search/index",
      "style": {
        "navigationBarTitleText": "搜索"
      }
    },
    {
      "path": "pages/discover/index",
      "style": {
        "navigationBarTitleText": "发现",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/my-collect/index",
      "style": {
        "navigationBarTitleText": "我的收藏"
      }
    },
    {
      "path": "pages/my-follow/index",
      "style": {
        "navigationBarTitleText": "我的关注"
      }
    },
    {
      "path": "pages/messages/index",
      "style": {
        "navigationBarTitleText": "消息中心"
      }
    },
    {
      "path": "pages/settings/index",
      "style": {
        "navigationBarTitleText": "设置"
      }
    },
    {
      "path": "pages/theme/index",
      "style": {
        "navigationBarTitleText": "主题设置"
      }
    }
  ],

  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "星语诗词",
    "navigationBarBackgroundColor": "#FFFFFF",
    "backgroundColor": "#F8F8F8"
  },

  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#3B7EFF",
    "borderStyle": "black",
    "backgroundColor": "#FFFFFF",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/tabbar/home.png",
        "selectedIconPath": "static/tabbar/home-active.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/discover/index",
        "iconPath": "static/tabbar/discover.png",
        "selectedIconPath": "static/tabbar/discover-active.png",
        "text": "发现"
      },
      {
        "pagePath": "pages/square/index",
        "iconPath": "static/tabbar/square.png",
        "selectedIconPath": "static/tabbar/square-active.png",
        "text": "广场"
      },
      {
        "pagePath": "pages/profile/index",
        "iconPath": "static/tabbar/profile.png",
        "selectedIconPath": "static/tabbar/profile-active.png",
        "text": "我的"
      }
    ]
  }
}
